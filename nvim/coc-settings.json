{
    "languageserver": {
        "ccls": {
            "command": "ccls",
            "args": ["--log-file","/tmp/ccls.log"],
            "filetypes": ["c", "cpp", "objc", "objcpp"],
            "rootPatterns": [".ccls", ".vim/", ".git/", "compile_commands.json"],
            "initializationOptions": {
                "cache": {
                    "directory": "/tmp/ccls"
                }
            }
        },
        "pyls":{
            "command": "pyls",
            "filetypes":["python"],
            "rootPatterns":["__pycache__"]
        }
    }
}
