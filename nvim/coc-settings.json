{
    "coc.preferences.enableFloatHighlight": true,
    "diagnostic.errorSign": "",
    "diagnostic.warningSign": "",
    "diagnostic.infoSign": "",
    "diagnostic.hintSign": "",
    "coc.preferences.currentFunctionSymbolAutoUpdate": true,
    "sggest.enablePreview": true,
    "clangd.enabled": true,
    "semanticTokens.filetypes": ["cpp","c","rust"],
    "rust-analyzer.inlayHints.enable": true,
    "rust-analyzer.inlayHints.typeHints": true,
    "clangd.arguments": [
        "--background-index",
        "--compile-commands-dir=build/Debug",
        "-j=12",
        "--clang-tidy",
        "--query-driver=/usr/bin/clang++",
        "--all-scopes-completion",
        "--completion-style=detailed",
        "--function-arg-placeholders",
        "--header-insertion=iwyu",
        "--pch-storage=disk"
    ],
    "clangd.path": "/Users/panxueqian/Library/Application Support/Code/User/globalStorage/llvm-vs-code-extensions.vscode-clangd/install/12.0.0/clangd_12.0.0/bin/clangd",
    "coc.preferences.colorSupport": true,
    "Lua.diagnostics.globals": [
        "vim"
    ],
    "codeLens.enable": true,
    "coc.preferences.formatOnType": true,
    "coc.preferences.formatOnSaveFiletypes": [
        "go"
    ],
    "languageserver": {
        "vim": {
            "command": "vim-language-server",
            "args": [
                "--stdio"
            ],
            "filetypes": [
                "vim"
            ]
        },
        "golang": {
            "command": "~/go/bin/gopls",
            "args": [
                "-logfile",
                "/tmp/gopls-vim"
            ],
            "rootPatterns": [
                "go.mod",
                ".vim/",
                ".git/",
                ".hg/"
            ],
            "env": {
                "GO111MODULE": "on",
                "GOFLAGS": "-mod=vendor",
                "CGO_ENABLED": "1"
            },
            "filetypes": [
                "go"
            ],
            "initializationOptions": {
                "usePlaceholders": true
            }
        },
        "pylsp": {
            "command": "pylsp",
            "filetypes": [
                "python"
            ],
            "rootPatterns": []
        },
        "cmake": {
            "command": "cmake-language-server",
            "filetypes": [
                "cmake"
            ],
            "rootPatterns": [
                "build/Debug"
            ],
            "initializationOptions": {
                "buildDirectory": "build/Debug"
            }
        },
        "bash": {
            "command": "bash-language-server",
            "args": [
                "start"
            ],
            "filetypes": [
                "sh"
            ],
            "ignoredRootPaths": [
                "~"
            ]
        }
    }
}
