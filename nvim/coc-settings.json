{
    "coc.preferences.codeLens.enable": true,
    "languageserver": {
        "cpptoole": {
            "command": "/usr/local/Cellar/llvm/9.0.0/bin/clangd",
            "args": [
                "--background-index",
                "--compile-commands-dir=build-clangd",
                "-j", "12",
                "--clang-tidy",
                "--completion-style=detailed",
                "--header-insertion=iwyu",
                "--pch-storage=disk",
                "--query-driver", "/Applications/Xcode.app/Contents/Developer/Toolchains/XcodeDefault.xctoolchain"
            ],
            "rootPatterns": ["./build-clangd"],
            "filetypes": ["c", "cpp", "objc", "objcpp"]

        },
        "ccls": {
            "command": "ccls",
            "args": [
                "--log-file", "/tmp/ccls.log"
            ],
            "filetypes": ["c", "cpp", "objc", "objcpp"],
            "disableCompletion": true,
            "rootPatterns": [".ccls-cache", ".vim/", ".git/", "compile_commands.json"],
            "initializationOptions": {
                "cache": {
                    "directory": "./.ccls-cache"
                },
                "compilationDatabaseDirectory": "./build-ccls",
                "highlight": {
                    "lsRanges": true
                },
                "clang": {
                    "extraArgs": [
                        "-isystem",
                        "/usr/local/Cellar/llvm/9.0.0/include/c++/v1",
                        "-Wold-style-cast"
                    ],
                    "resourceDir": "/usr/local/Cellar/llvm/9.0.0/lib/clang/9.0.0"
                }
            }
        },
        "pyls": {
            "command": "pyls",
            "filetypes": ["python"],
            "rootPatterns": ["__pycache__"]
        }
    }
}
