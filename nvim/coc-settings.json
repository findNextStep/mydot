{
    "languageserver": {
        "ccls": {
            "command": "ccls",
            "args": ["--log-file","/tmp/ccls.log"
            ],
            "filetypes": ["c", "cpp", "objc", "objcpp"],
            "rootPatterns": [".ccls-cache-nvim", ".vim/", ".git/", "compile_commands.json"],
            "initializationOptions": {
                "cache": {
                    "directory": "./.ccls-cache"
                },
                "compilationDatabaseDirectory":"./build",
                "highlight": { "lsRanges" : true },
                "clang": {
                    "extraArgs": [
                        "-isystem",
                        "/usr/local/Cellar/llvm/9.0.0/include/c++/v1"
                    ],"resourceDir":"/usr/local/Cellar/llvm/9.0.0/lib/clang/9.0.0"
                }
            }
        },
        "pyls":{
            "command": "pyls",
            "filetypes":["python"],
            "rootPatterns":["__pycache__"]
        }
    }
}
