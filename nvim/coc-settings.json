{
    "coc.preferences.enableFloatHighlight": true,
    "suggest.enablePreview": true,
    "coc.preferences.hoverTarget":"float",
    "clangd.enabled": false,
    "clangd.arguments": [
        "--background-index",
        "--compile-commands-dir=build-clangd",
        "-j",
        "12",
        "--clang-tidy",
        "--completion-style=detailed",
        "--header-insertion=iwyu",
        "--pch-storage=disk"
    ],
    "clangd.path": "/usr/local/opt/llvm/bin/clangd",
    "coc.preferences.colorSupport": true,
    "codeLens.enable": true,
    "coc.preferences.formatOnType": true,
    "coc.preferences.formatOnSaveFiletypes": [
        "go"
    ],
    "languageserver": {
        "vim": {
            "command": "vim-language-server",
            "args": [
                "--stdio"
            ],
            "filetypes": [
                "vim"
            ]
        },
        "ccls": {
            "command": "ccls",
            "args": [
                "--log-file",
                "/tmp/ccls.log"
            ],
            "filetypes": [
                "c",
                "cpp",
                "objc",
                "objcpp"
            ],
            "rootPatterns": [
                ".ccls-cache",
                ".vim/",
                ".git/",
                "compile_commands.json"
            ],
            "initializationOptions": {
                "compilationDatabaseDirectory": "build/Debug",
                "cache": {
                    "directory": ".ccls-cache",
                    "format": "binary",
                    "hierarchicalPath": false,
                    "retainInMemory": 2
                },
                "capabilities": {
                    "documentOnTypeFormattingProvider": {
                        "firstTriggerCharacter": "}",
                        "moreTriggerCharacter": []
                    },
                    "foldingRangeProvider": false,
                    "workspace": {
                        "workspaceFolders": {
                            "supported": true,
                            "changeNotifications": true
                        }
                    }
                },
                "clang": {
                    "extraArgs": [
                        "-isystem",
                        "/usr/local/opt/llvm/include/c++/v1",
                        "-Wold-style-cast"
                    ],
                    "pathMappings": [],
                    "resourceDir": "/usr/local/opt/llvm/lib/clang/9.0.1"
                },
                "client": {
                    "diagnosticsRelatedInformation": true,
                    "hierarchicalDocumentSymbolSupport": true,
                    "linkSupport": true,
                    "snippetSupport": true
                },
                "codeLens": {
                    "localVariables": false
                },
                "completion": {
                    "caseSensitivity": 1,
                    "detailedLabel": true,
                    "dropOldRequests": true,
                    "duplicateOptional": true,
                    "filterAndSort": true,
                    "include": {
                        "blacklist": [],
                        "maxPathSize": 37,
                        "suffixWhitelist": [
                            ".h",
                            ".hpp",
                            ".hh",
                            ".inc",
                            ".h",
                            ".hpp",
                            ".hh"
                        ],
                        "whitelist": []
                    },
                    "maxNum": 100,
                    "placeholder": true
                },
                "diagnostics": {
                    "blacklist": [],
                    "onChange": 200,
                    "spellChecking": true,
                    "whitelist": []
                },
                "highlight": {
                    "lsRanges": true
                },
                "index": {
                    "comments": 2,
                    "initialNoLinkage": false,
                    "maxInitializerLines": 15,
                    "multiVersion": 0,
                    "name": {
                        "suppressUnwrittenScope": false
                    },
                    "onChange": false,
                    "parametersInDeclarations": true,
                    "threads": 10,
                    "trackDependency": 2,
                    "whitelist": []
                },
                "request": {
                    "timeout": 5000
                },
                "session": {
                    "maxNum": 10
                },
                "workspaceSymbol": {
                    "caseSensitivity": 1,
                    "maxNum": 1000000,
                    "sort": true
                },
                "xref": {
                    "maxNum": 2000
                }
            }
        },
        "golang": {
            "command": "~/go/bin/gopls",
            "args": [
                "-logfile",
                "/tmp/gopls-vim"
            ],
            "rootPatterns": [
                "go.mod",
                ".vim/",
                ".git/",
                ".hg/"
            ],
            "env": {
                "GO111MODULE": "off",
                "CGO_ENABLED": "0"
            },
            "filetypes": [
                "go"
            ],
            "initializationOptions": {
                "usePlaceholders": true
            }
        },
        "pyls": {
            "command": "pyls",
            "filetypes": [
                "python"
            ],
            "rootPatterns": [
                "__pycache__"
            ]
        },
        "cmake": {
            "command": "cmake-language-server",
            "filetypes": [
                "cmake"
            ],
            "rootPatterns": [
                "build/Debug"
            ],
            "initializationOptions": {
                "buildDirectory": "build/Debug"
            }
        },
        "bash": {
            "command": "bash-language-server",
            "args": [
                "start"
            ],
            "filetypes": [
                "sh"
            ],
            "ignoredRootPaths": [
                "~"
            ]
        },
        "lua": {
            "command": "lua-lsp",
            "filetypes": [
                "lua"
            ]
        }
    }
}
