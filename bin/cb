#!/bin/sh

# 用于程序构建，实现多语言、多构建系统的单命令构建

# 如果是一个cmake工程
if [ -f CMakeLists.txt ];then
    if [ ! -d build ];then
        mkdir build
    fi
    cd build
    if [ ! -f Makefile ];then
        cmake -DCMAKE_EXPORT_COMPILE_COMMANDS=ON ..
    fi
    make "$@"
elif [ -f Makefile ];then
    if [ ! -f compile_commands.json ];then
        bear make "$@"
    else
        make "$@"
    fi
elif [ -f ./configure ];then
    sh ./configure "$@"
elif [ -f autogen.sh ];then
    sh ./autogen.sh "$@"
fi
